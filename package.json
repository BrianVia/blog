{
  "name": "blog",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "fetch-posts": "bun scripts/fetchNotionPosts.ts",
    "prebuild": "bun scripts/fetchNotionPosts.ts",
    "dev": "bun run fetch-posts && astro dev",
    "start": "bun run fetch-posts && astro dev",
    "generate:feeds": "node scripts/update-paul-graham-feed.js",
    "build": "npm run generate:feeds && astro build",
    "preview": "bun run fetch-posts && astro preview"
  },
  "lint-staged": {
    "*": [
      "npm run build"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "astro": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "tsx": "^4.20.2"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.9",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^5.1.3",
    "@notionhq/client": "^3.1.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.4",
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "dotenv": "^16.5.0",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "notion-to-md": "^3.1.9",
    "slugify": "^1.6.6",
    "tailwindcss": "^3.4.0"
  }
}