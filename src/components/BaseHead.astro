---
import "../styles/blog.css";
import { SEO } from "astro-seo";

export interface BaseHeadProps {
	title?: string;
	description?: string;
	imageUrl: string;
	canonicalRoute: string;
}

const baseTitle = "Brian | Via";
const baseDescription = "Musings on Software or anything else that strikes my fancy.";

const { title, description = baseDescription, imageUrl, canonicalRoute } = Astro.props as BaseHeadProps;
const canonicalURL = `https://brianvia.blog/${canonicalRoute || ""}`;
---

<SEO
  title={`${title} ${title ? `- ${baseTitle}` : baseTitle}`}
  description={description}
  canonical={canonicalURL.toString()}

  openGraph={{
    basic: {
      title: title,
      type: "website",
      image: imageUrl,
    }
  }}
  twitter={{
    card: "summary_large_image",
    site: "@Brian_Via",
    creator: "@Brian_Via"
  }}
  extend={{
    link: [
      { rel: "icon", type: "image/x-icon", href: "/favicon.ico" },
      { rel: "preconnect", href: "https://fonts.gstatic.com" },
      { rel: "stylesheet", href: "https://fonts.googleapis.com/css2?family=IBM+Plex+Mono&family=IBM+Plex+Sans:wght@400;700&display=swap" }
    ],
    meta: [
      { name: "viewport", content: "width=device-width" },
    ],
  }}
/>
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Styles -->
<style is:global>
  @import "../styles/blog.css";
</style>
