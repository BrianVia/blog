---
import logoSvg from '../assets/logo.svg';
--- 

<header class="wrapper">
	<nav>
		<a href="/">
			<img src={logoSvg} />
		</a>
	</nav>
</header>

<style>
	header {
		padding-top: 1rem;
		padding-bottom: 1rem;
		height: 5rem;
		margin-bottom: 5rem;
	}
	nav {
		display: flex;
		justify-content: space-between;
		margin-bottom: 3rem;
	}

	img {
		width: 10rem;
		height: 10rem;
	}

	a {
		text-decoration: none;
		display: inline-flex;
	}
</style>
