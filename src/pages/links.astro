---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Bookmark {
  id: string;
  title: string;
  url: string;
  createdAt: string;
  bookmarkSource: "Raindrop" | "ReadwiseReader";
  originalUrl: string;
  summary?: string;
  author?: string;
  tags?: string[];
  imageUrl?: string;
}

const links = await fetch('https://flatmeadow.com/links/all-bookmarks.json')
const linkData = await links.json() as Bookmark[];

// Sort by createdAt descending (newest first)
const sortedLinks = linkData.sort((a, b) =>
  new Date(b.createdAt).valueOf() - new Date(a.createdAt).valueOf()
);

// Function to format date
function formatDate(dateString: string) {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// Function to get favicon
function getFavicon(url: string) {
  return `https://www.google.com/s2/favicons?domain=${url}&sz=32`;
}

const title = "Bookmarked Links";
const description = "A curated feed of interesting links from Readwise and Raindrop.";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <BaseHead title={title} description={description} canonicalRoute="links" />
  </head>

  <body>
    <Header />

    <main class="wrapper py-16 md:py-24">
      <!-- Hero Section -->
      <section class="text-center mb-24 md:mb-32">
        <h1 class="text-6xl md:text-8xl font-bold font-heading text-ink mb-8 tracking-tight leading-[0.9]">
          {title}
        </h1>
        <div class="max-w-2xl mx-auto">
          <p class="text-2xl md:text-3xl font-serif italic text-ink-light">
            {description}
          </p>
        </div>
      </section>

      <!-- Links Grid -->
      <section aria-label="Bookmarked links">
        <div class="flex items-center gap-4 mb-12">
          <span class="h-px bg-ink/10 flex-1"></span>
          <h2 class="text-sm font-sans font-bold uppercase tracking-widest text-ink-lighter">Reading List</h2>
          <span class="h-px bg-ink/10 flex-1"></span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedLinks.map((link) => (
            <article class="group">
              <div class="bg-white dark:bg-white/5 rounded-sm shadow-editorial hover:shadow-editorial-hover transition-all duration-300 hover:-translate-y-1 overflow-hidden h-full flex flex-col">
                <a href={link.url} target="_blank" rel="noopener noreferrer" class="block flex-1 flex flex-col">
                  {link.imageUrl && (
                    <div class="relative overflow-hidden">
                      <img
                        src={link.imageUrl}
                        alt={link.title}
                        class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105"
                        loading="lazy"
                        decoding="async"
                      />
                    </div>
                  )}

                  <div class="p-8 flex-1 flex flex-col">
                    {link.tags && link.tags.length > 0 && (
                      <div class="flex gap-2 mb-4">
                        {link.tags.slice(0, 2).map((tag) => (
                          <span class="text-[10px] font-sans font-bold tracking-widest uppercase text-accent">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}

                    <h3 class="text-2xl font-heading font-bold text-ink mb-3 leading-tight group-hover:text-accent transition-colors">
                      <span class="bg-gradient-to-r from-accent to-accent bg-[length:0%_2px] bg-no-repeat bg-left-bottom group-hover:bg-[length:100%_2px] transition-all duration-500 box-decoration-clone">
                        {link.title}
                      </span>
                    </h3>

                    {link.summary && (
                      <p class="text-base text-ink-light font-serif leading-relaxed mb-6 line-clamp-3 flex-1">
                        {link.summary}
                      </p>
                    )}

                    <div class="flex items-center justify-between pt-6 border-t border-ink/5 mt-auto">
                      <time class="text-xs font-sans font-medium text-ink-lighter uppercase tracking-widest">
                        {formatDate(link.createdAt)}
                      </time>
                      <span class="text-xs font-sans font-bold text-ink hover:text-accent uppercase tracking-widest transition-colors">
                        {link.bookmarkSource === "ReadwiseReader" ? "Readwise" : link.bookmarkSource}
                      </span>
                    </div>
                  </div>
                </a>
              </div>
            </article>
          ))}
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
