---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const title = "RSS Feeds";
const description = "Custom curated RSS feeds for various creators and writers.";

interface Feed {
  title: string;
  description: string;
  url: string;
  author: string;
  imageUrl?: string;
}

const feeds: Feed[] = [
  {
    title: "Paul Graham Essays",
    description: "A home-built feed of Paul Graham's essays from paulgraham.com, updated regularly.",
    url: "/feeds/paul-graham.xml",
    author: "Paul Graham",
    imageUrl: "https://sep.yimg.com/ca/I/paulgraham_2202_8901"
  }
];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <BaseHead title={title} description={description} canonicalRoute="feeds" />
  </head>

  <body>
    <Header />

    <main class="max-w-4xl mx-auto px-6 py-16">
      <section class="text-center mb-12">
        <h1 class="text-5xl md:text-6xl font-bold font-heading text-gray-900 dark:text-gray-100 tracking-tight leading-tight mb-4">
          {title}
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
          Subscribe to custom curated RSS feeds of your favorite creators
        </p>
      </section>

      <div class="space-y-6">
        {feeds.map((feed) => (
          <div class="bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-700 rounded-sm p-8 transition-all hover:border-gray-400 dark:hover:border-gray-600">
            <div class="flex items-start gap-6 mb-4">
              {feed.imageUrl && (
                <img
                  src={feed.imageUrl}
                  alt={feed.title}
                  class="w-20 h-20 object-cover rounded-sm border-2 border-gray-300 dark:border-gray-600"
                />
              )}
              <div class="flex-1">
                <h2 class="text-3xl font-bold font-heading text-gray-900 dark:text-gray-100 mb-1 tracking-tight">{feed.title}</h2>
                <p class="text-sm text-gray-500 dark:text-gray-500">by {feed.author}</p>
              </div>
            </div>
            <p class="text-gray-700 dark:text-gray-300 mb-6 leading-relaxed">{feed.description}</p>
            <div class="flex gap-4">
              <a
                href={feed.url}
                class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 dark:bg-gray-700 border-2 border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-medium rounded-sm shadow-[1px_1px_0_#ddd] dark:shadow-none hover:bg-gray-200 dark:hover:bg-gray-600 transition-all"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M5 3a1 1 0 000 2c5.523 0 10 4.477 10 10a1 1 0 102 0C17 8.373 11.627 3 5 3z" />
                  <path d="M4 9a1 1 0 011-1 7 7 0 017 7 1 1 0 11-2 0 5 5 0 00-5-5 1 1 0 01-1-1zM3 15a2 2 0 114 0 2 2 0 01-4 0z" />
                </svg>
                Subscribe via RSS
              </a>
              <button
                onclick={`navigator.clipboard.writeText('${new URL(feed.url, "https://brianvia.blog")}')`}
                class="inline-flex items-center gap-2 px-4 py-2 bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-medium rounded-sm hover:bg-gray-50 dark:hover:bg-gray-700 transition-all"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" />
                  <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z" />
                </svg>
                Copy Feed URL
              </button>
            </div>
          </div>
        ))}
      </div>
    </main>

    <Footer />
  </body>
</html> 